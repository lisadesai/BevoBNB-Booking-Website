@model Team24_Final_Project.Models.AdminSearchViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Admin Report</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="DisplaySearchResults">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchPropertyID" class="control-label"></label>
                @Html.ListBoxFor(model => model.SearchPropertyID, (MultiSelectList)ViewBag.AdminAllProperties, new { @class = "form-control" })
            </div>
            <br />
            <div class="form-group">
                <label asp-for="SearchCategoryID" class="control-label"></label>
                @Html.ListBoxFor(model => model.SearchCategoryID, (MultiSelectList)ViewBag.AdminAllCategories, new { @class = "form-control" })
            </div>
            <br />
            <div class="form-group">
                <label asp-for="SearchCheckInDay" class="control-label"></label>
                <input asp-for="SearchCheckInDay" class="form-control" />
                <span asp-validation-for="SearchCheckInDay" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="SearchCheckOutDay" class="control-label"></label>
                <input asp-for="SearchCheckOutDay" class="form-control" />
                <span asp-validation-for="SearchCheckOutDay" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Generate Report" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>