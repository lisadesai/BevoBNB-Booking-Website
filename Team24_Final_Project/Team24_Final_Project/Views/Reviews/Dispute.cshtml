@model Team24_Final_Project.Models.Review

@{
    ViewData["Title"] = "Dispute";
}

<h1>Dispute</h1>

<h4>Review</h4>
<hr />

@*display info that the host will respond to*@
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerComment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerComment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
</div>



<div class="row">
    <div class="col-md-4">
        <form asp-action="Dispute">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewID" />

            <div class="form-group">
                <label asp-for="HostResponse" class="control-label"></label>
                <input asp-for="HostResponse" class="form-control" />
                <span asp-validation-for="HostResponse" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


